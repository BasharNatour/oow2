    .setting-account-users
      .row
        .container
          .content-worker(class="col-lg-12 col-md-12 col-sm-12")
            h2(class="text-center") Edit Settings
            .sections
              .row
                div(class="col-lg-6")
                  .input-field
                    lebal First Name 
                    input(type="text" class="account-sett-btn"  required)
                div(class="col-lg-6")
                  .input-field
                    lebal Last Name 
                    input(type="text"  class="account-sett-btn" required)
            .sections
              .row
                div(class="col-lg-6")
                  .input-field
                    lebal Email 
                    input(type="text" class="account-sett-btn"  required)
                div(class="col-lg-6")
                  .input-field
                    lebal Governorates 
                    select(class="account-sett-btn"  required)
                        option(value="" hidden) Governorate
                        option Alexandria
                        option Aswan
                        option Asyut
                        option Cairo
                        option Beni Suef
                        option Damietta
                        option Faiyum
                        option Giza
                        option Ismailia
                        option Kafr El Sheikh
                        option Luxor
                        option Minya
                        option Red Sea
                        option Sohag          
            .sections
              h3 Update Your Password
              .row
                div(class="col-lg-6 ")   
                  .input-field
                    lebal Current Password 
                    input(type="Password" class="account-sett-btn" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required)
              .row(class="up")
                div(class="col-lg-6")
                  .input-field
                    lebal New Password (6 Characters Required)
                    input(type="Password" class="account-sett-btn"  minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required)
                div(class="col-lg-6")
                  .input-field
                    lebal Confirm Password
                    input(type="Password" class="account-sett-btn" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required)
                          
            button(class="btn btn-oow submit-save") Save Change
