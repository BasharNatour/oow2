extends index
block append linksCss  
  link(rel="stylesheet" , href="css/setting-worker/setting-worker.css")
  
block pageTitle
    title Complaints


block pageContent
  |
  <!-- start Nav -->
  nav(class="navbar navbar-toggleable-md navbar-light")
     .container
          |
          |
          a(class="navbar-brand", href="/")
              img(src="img/Home-page/logo.png")
          
          button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#silver" aria-controls="navbarSupportedContent"  aria-expended="false" aria-lebal="toggle navgation") menu
          include include/nav.pug 


  |
  |
  <!-- End Nav -->
  |
  |
  <!-- start Contant Us -->
  if success.message
    .alert.alert-success.text-center(role='alert')=success.message
  .contact(id="contact")
    .container
      .row
        div(class="col-lg-5 col-md-12 col-sm-12  contact-content")
          h2 CONTACT US
          .cont-color(class="hide-on-small-only hide-on-med-only")
          p Fill in the filed below and we'll get back to you.
          form(class="contact-form" action="/complaints" method="post")
            input(type="text" , name="name" , placeholder="Name", class="btn-cont" value=user.firstName)
            input(type="email" , name="email" , placeholder="Email", class="btn-cont" value=user.email)
            textarea(class="btn-cont" name="title")
            button(type="submit") Submit
        div(class="col-lg-5 offset-lg-2 col-md-12 col-sm-12 cont-img")
            img(src="img/Home-page/undraw_messaging_uok8.svg")    
  |
  |
  <!-- End CONTACT us -->
  |
  |
