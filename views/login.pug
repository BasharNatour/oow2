              img(src="img/login/Group 200.svg")   
          
          .group
            .papple-two 
              img(src="img/login/Group 197.svg")  
            .papple-three 
              img(src="img/login/Group 197.svg")    

        .right(class="col-lg-6 col-md-12 col-sm-12 text-center" )
          h1 Login
          p Create New <a href="/signup"> Account </a>
          form(id="login-form" action="/signin" method="post")
            .input-field
              input(type="email"    ,id="login-email"      , class="btn-sub", name="email", placeholder="Enter Your Email Address" required)
            .input-field
              input(type="password" , id="login-password"  , class="btn-sub" ,name="password", placeholder="Enter Your password" minlength="8" pattern="^.{7,}$" title="This password incorrect" required)
              .text-danger.text-centered= errors.signinError 
            div(class="form")
              button(type="submit", name="submit", class="btn-two") Login
            .forget
              a(href="#") Forget Password ?   
            
