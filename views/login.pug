  <!-- start login -->
  .singin
    .container
      .row
        .left(class="col-lg-6 col-md-12 col-sm-12 text-center")
          h1 Log In Into Your Account
          p Welcome back! Please enter your access info
          img(src="img/login/undraw_freelancer_b0my.svg")
            
          .group
            .birds-one 
              img(src="img/login/Group 200.svg")  
